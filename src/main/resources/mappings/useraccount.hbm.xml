<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="beans.models">

    <class name="UserAccount" table="USER_ACCOUNT">
        <id name="id" column="USER_ID">
                <generator class="foreign">
                    <param name="property">user</param>
                </generator>
            </id>
        <property name="prepaidMoney" type="double" column="PREPAID_MONEY"/>
        <one-to-one name="user" class="User" cascade="save-update" constrained="true" foreign-key="user_id"/>

    </class>

</hibernate-mapping>